<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.study.hometrainingkotlin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HomeTrainingKotlin"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.alarm.Alarm"></activity>
        <activity android:name=".view.exercise.Loins" />
        <activity android:name=".view.exercise.Body" />
        <activity
            android:name=".view.Splash.initSplashView"
            android:screenOrientation="fullSensor"
            android:theme="@style/ExerciseSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.Login.Login" />
        <activity android:name=".view.Register.Register" />
        <activity android:name=".BottomNaviView" />

        <service
            android:name=".util.service.ExerciseAlarmService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="RUNNING" />
                <action android:name="COMPLETE_EXERCISE" />
                <action android:name="CLOSE" />
                <action android:name="SET_ALARM" />
            </intent-filter>
        </service>
        <receiver android:name=".util.notification.ExerciseAlarmNotification"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="alarm_on"/>
                <action android:name="alarm_off"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>